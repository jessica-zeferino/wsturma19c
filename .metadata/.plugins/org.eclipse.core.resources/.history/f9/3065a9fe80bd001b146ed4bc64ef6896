package decisao;

import javax.swing.JOptionPane;

public class Exercicio1 {
	
	/*
	 * 1) Solicite 2 valores e um operador matemático
	 * (+, -, /, *)
	 * 
	 * Dependendo do operador que foi digitado, realize o cálculo e exiba o resultado.
	 * Dica: Se utilizar String a comparação de String deve ser:
	 * if (variavel.equals("valorasercomparado"))
	 * 
	 */
	
	public static void main(String[] args) {
		
		int x = Integer.parseInt(JOptionPane.showInputDialog("Digite o 1º valor: "));
		int y = Integer.parseInt(JOptionPane.showInputDialog("Digite o 2º valor: "));
		char operador = Char.parseChar(JOptionPane.showInputDialog("Ecolha um operador (+, -, /, *): "));
				
		if(operador=='+') {
			System.out.println(x+y);
		}else if (operador=='-'){
			System.out.println(x-y);
		}else if (operador=='/'){
			System.out.println(x/y);
		}else{
			System.out.println(x*y);
		}
		
	}

}
