package variaveis;

import javax.swing.JOptionPane;

public class TiposDados {
	// main() é o start point de uma aplicação Java
	// é a chave de ignição do carro
	public static void main(String args[]) {
		
		// Sintaxe: <tipo de dado> <nome var> = <dado>;
		
		String nome=JOptionPane.showInputDialog("Digite o seu nome");
		int idade = Integer.parseInt(JOptionPane.showInputDialog("Digite sua idade"));
		double altura = 1.74;
		
		System.out.println("Nome ..: " + nome);
		System.out.println("Idade..: " + idade);
		System.out.println("Altura.: " + altura);
		
		
		/*
		 * alfanumérico: é um texto, parte de um texto ou um número
		 * que não será utilizado em operações matemáticas
		 * CEP (RH itau) => 08210-230
		 * Em Javanês: String
		 * 
		 * numérico: representa um dado que pode ser utilizado em
		 * expressões matemáticas
		 * CEP (aplicação dos correios) => 08210320
		 * CPF (app receita federal)
		 * Funcional (colaboradores do itau)
		 * RM (alunos de uma faculdade)
		 * em Javanês:
		 *  - int => representação de números inteiros
		 *  - double => 
		 * 
		 * 
		 * 
		 */
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

	/*
	 * é um bloco de anotações
	 * em uma classe encontramos: métodos e atributos
	 * nossa classe é pública
	 * 
	 */
	
}
